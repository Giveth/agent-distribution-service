{
    "name": "fund-distributer",
    "version": "1.0.0",
    "description": "Ethereum wallet service with PostgreSQL integration",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "test": "mocha -r ts-node/register 'src/**/*.test.ts'",
        "test:watch": "mocha -r ts-node/register --watch 'src/**/*.test.ts'",
        "test:coverage": "nyc npm test",
        "test:services": "mocha -r ts-node/register 'src/services/**/*.test.ts'",
        "test:repositories": "mocha -r ts-node/register 'src/repositories/**/*.test.ts'",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm migration:generate",
        "migration:run": "npm run typeorm migration:run",
        "migration:revert": "npm run typeorm migration:revert",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepare": "husky install"
    },
    "keywords": [
        "ethereum",
        "wallet",
        "postgresql",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^16.4.5",
        "ethers": "^6.11.1",
        "express": "^4.18.3",
        "pg": "^8.11.3",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@types/chai": "^4.3.11",
        "@types/express": "^4.17.21",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.24",
        "@types/sinon": "^17.0.4",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "chai": "^4.3.10",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "mocha": "^10.3.0",
        "nyc": "^15.1.0",
        "prettier": "^3.2.5",
        "sinon": "^20.0.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}